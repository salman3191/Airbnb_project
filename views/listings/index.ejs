<% layout("/layouts/boilerplate") %>

<h1>All listings</h1>

<!-- <form method="get" action="/listings/new">
    <button>Create New</button>
  </form> -->

<div class="row row-cols-lg-4 row-cols-md-2">
  <%for(listings of allListings){%>

  <a href="/listings/<%= listings._id %>" class="listing-link">
    <div class="card" style="width: 20rem">
      <img
        src="<%=listings.image.url%>"
        class="card-img-top"
        alt="listing image"
        style="height: 20rem"
      />
      <div class="card-img-overlay">abc</div>
      <div class="card-body">
        <p class="card-text">
          <b><%= listings.title %></b><br />&#8377;<%=
          listings.price.toLocaleString("en-IN") %>/night
        </p>
      </div>
    </div>
  </a>
  <%}%>
</div>
