<% layout("/layouts/boilerplate") %>
<div class="row">
  <div class="col-8 offset-2">
    <h3>Create a New Listing</h3>
    <br />
    <form method="POST" action="/listings" novalidate class="needs-validation">
      <div class="mb-3">
        <label for="title" class="form-label"></label>
        <input
          name="listing[title]"
          placeholder="enter title"
          type="text"
          class="form-control"
          required
        />
        <div class="valid-feedback">title looks good!</div>
      </div>

      <div class="mb-3">
        <label for="textarea" class="form-label">Description</label>
        <textarea
          name="listing[description]"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">Description required</div>
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">Image URL/link</label>
        <input
          name="listing[image]"
          placeholder="enter image URL/Link"
          type="text"
          class="form-control"
          required
        />
      </div>

      <div class="mb-3">
        <label for="price" class="form-label">price</label>
        <input
          name="listing[price]"
          placeholder="enter price"
          type="number"
          class="form-control"
          required
        />
      </div>
      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="country" class="form-label">country</label>
          <input
            name="listing[country]"
            placeholder="india"
            type="text"
            class="form-control"
            required
          />
        </div>
        <div class="mb-3 col-md-7">
          <label for="location" class="form-label">location</label>
          <input
            name="listing[location]"
            placeholder="enter location"
            type="text"
            class="form-control"
            required
          />
        </div>
      </div>

      <button class="btn btn-dark add-btn">Add</button>
    </form>
    <br /><br />
  </div>
</div>
